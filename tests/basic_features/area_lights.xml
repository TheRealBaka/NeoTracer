            <shape type="sphere"/>
            <transform>
                <scale value="2"/>
                <translate x="-4" y="-2" z="-1"/>
            </transform>
            <emission type="lambertian">
                <texture name="emission" type="constant" value="2.5,7,3"/>
            </emission>
            </instance>
        </light>

        <instance>
            <shape type="mesh" filename="../meshes/bunny.ply"/>
            <bsdf type="diffuse">
                <texture name="albedo" type="constant" value="0.1,0.3,0.7"/>
            </bsdf>
            <transform>
                <rotate axis="1,0,0" angle="90"/>
                <translate x="0.18" y="1.03"/>
